<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#343434" />
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <corners
                android:radius="10dp"   >
            </corners>
            <padding
                android:left="25dp"
                android:top="25dp"
                android:right="25dp"
                android:bottom="25dp"    >
            </padding>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#343434"
                android:endColor="#171717"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <corners
                android:radius="10dp"   >
            </corners>
            <padding
                android:left="25dp"
                android:top="25dp"
                android:right="25dp"
                android:bottom="25dp"    >
            </padding>
        </shape>
    </item>
</selector>
