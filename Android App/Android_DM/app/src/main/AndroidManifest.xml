<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="atoa_electronics.atoaac" >

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN">To access Bluetooth</uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH">To work with Bluetooth</uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/air_conditioner"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait"
        android:configChanges="orientation|keyboardHidden">
        <activity
            android:name=".Login"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DeviceList"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity
            android:name=".Help"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>

    </application>

</manifest>
